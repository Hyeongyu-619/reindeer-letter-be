generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  createdAt       DateTime @default(now())
  nickName        String?
  password        String
  profileImageUrl String?
  updatedAt       DateTime @updatedAt
  refreshToken    String?
  kakaoId         String?
  receivedLetters Letter[] @relation("ReceivedLetters")
  sentLetters     Letter[] @relation("SentLetters")
}

model Letter {
  id             Int       @id @default(autoincrement())
  title          String
  description    String
  imageUrl       String?
  bgmUrl         String?
  category       Category
  isOpen         Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  receiverId     Int
  scheduledAt    DateTime?
  isDelivered    Boolean   @default(false)
  senderId       Int?
  senderNickname String
  receiver       User      @relation("ReceivedLetters", fields: [receiverId], references: [id])
  sender         User?     @relation("SentLetters", fields: [senderId], references: [id])
  isDraft        Boolean   @default(false)
  draftData      Json?     // JSON 타입으로 임시저장 데이터 저장
}

model EmailVerification {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Category {
  TEXT
  VOICE
}
